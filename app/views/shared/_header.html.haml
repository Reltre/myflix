%section#top-header.row
  %h1.col-sm-1
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-sm-3.clearfix.list-unstyled.list-inline#my_options
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", queue_items_path
      %li= link_to "People", people_path
    .col-sm-5
      %form.navbar-form(action="#{search_videos_path}" method="get" class="form-inline")
        .form-group
          %input.form-control(type="text" name="q" placeholder="Search for videos here")
        %button.btn.btn-secondary(type="submit") Search
  #user_links.dropdown.open.col-sm-3
    %button.btn.btn-secondary.btn-md.dropdown-toggle(type='button' id='dlabel' data-toggle='dropdown' aria-hashpopup='true' aria-expanded='false')
      Welcome, #{current_user.full_name}
      %b.caret
    .dropdown-menu(role="menu" aria-labelledby="dlabel")
      %a.dropdown-item(href="#{user_path(current_user)}") Account
      %a.dropdown-item(href="#") Plan and Billing
      = link_to "Sign Out", log_out_path, class: 'dropdown-item'
