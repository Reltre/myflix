%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag(update_queue_path, method: :post) do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @items.each_with_index do |queue, index|
                %tr
                  %td
                    = text_field_tag "list_order_#{index}",
                                     "#{queue.list_order}",
                                     class: "form-control"
                  %td
                    = link_to queue.video_title, video_path(queue.video)
                  %td
                    = button_to "Play", "#", class: "btn btn-default"
                  %td= queue.rating
                  %td
                    = link_to queue.category_name, queue.category
                  %td
                    = link_to queue_item_path(queue), method: :delete do
                      %i.glyphicon.glyphicon-remove

          = submit_tag "Update Instant Queue", class: "btn btn-default"
