%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @items.each_with_index do |queue, index|
              %tr
                %td
                  %input.form-control(type="text" value="#{queue.list_order}")
                %td
                  = link_to queue.video_title
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td= queue.rating
                %td
                  = link_to queue.category_name, queue.category
                %td
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove

        = button_to "Update Instant Queue", nil, class: "btn btn-default"


