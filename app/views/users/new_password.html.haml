%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag set_new_password_path
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          = label_tag 'New Password'
          .row
            .col-sm-4
              = password_field_tag "password", "", class: 'form-control(type="password")'
        %fieldset.form-group.action
          = submit_tag "Reset Password", class: "btn btn-default"
