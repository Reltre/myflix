%article.video
  .container
    .row
      .video_info.col-large-2.col-large-offset-3
        %header
          %h3= @video.title.titleize
          %span= "Rating: #{@video.calculate_rating}/5.0"
        %p= @video.description
    %br
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="http://dummyimage.com/665x375/000000/00a2ff")
        %br
        %br
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag add_review_video_path(@video), method: "post" do
        %fieldset
          .form-group
            = label_tag "Rate this video"
            .row
              .col-sm-3
                = select_tag "rating",
                 options_for_select([["5 stars", 5],
                                    ["4 stars", 4],
                                    ["3 stars", 3],
                                    ["2 stars", 2],
                                    ["1 stars", 1]]),
                 class: 'form-control'
          .form-group
            = label_tag "Write Review"
            .row
              .col-sm-8
                = text_area_tag "description", nil, rows: 6, class: "form-control"
        %fieldset.form-group.actions.clearfix
          = submit_tag "Submit", class: "btn"
          %a(href="") Cancel
      %header
        %h3= "User Reviews (#{@video.reviews.size})"
      %ul
        - @video.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span= "Rating: #{review.rating}"
                %p= "by #{link_to review.user.full_name, ''}".html_safe
              .col-sm-8
                %p= review.description
