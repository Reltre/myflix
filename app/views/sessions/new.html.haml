%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag layout: :horizontal,
                           url: log_in_path,
                           class: 'sign_in',
                           label_col: 'col-sm-2',
                           control_col: 'col-sm-10' do |f|
        %header
          %h1 Sign in
        = f.email_field :email, label: "Email Address"
        = f.password_field :password, label: "Password"
        = f.form_group do
          = f.submit "Log In"
          = link_to "Forgot Password?", password_reset_path, id: 'forgot_password'
