%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @users.each do |user|
        %tr
          %td
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(follower.email.downcase)}?s=40")
            = link_to "#{follower.full_name}", user_path(follower)
          %td.extra-padding 20
          %td.extra-padding 30
          %td.extra-padding
            = link_to follow_path(user), method: :delete do
              %i.glyphicon.glyphicon-remove
